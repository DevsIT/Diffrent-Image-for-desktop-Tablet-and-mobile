   <img class="{% if block.settings.tab_hero_slide or block.settings.tab_hero_slide %}dsk_hero_slide{% endif %} hero__image hero__image--{{ block.id }} lazyload{% unless forloop.first == true %} lazypreload{% endunless %}"
              {%- if forloop.first == true -%}
                src="{{ block.settings.hero_slide | img_url: '300x' }}"
              {%- endif -%}
              data-src="{{ img_url }}"
              data-widths="[540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048, 4472]"
              data-aspectratio="{{ block.settings.hero_slide.aspect_ratio }}"
              data-sizes="auto"
              data-parent-fit="cover"
              alt="{{ block.settings.hero_slide.alt | escape }}"
              style="object-position: {{ block.settings.image_position }}">
          
          {% if block.settings.tab_hero_slide %}
          <img class="tab_hero_slide hero__image hero__image--{{ block.id }} lazyload{% unless forloop.first == true %} lazypreload{% endunless %}"
                src="{{ block.settings.tab_hero_slide | img_url: 'master' }}"
              alt="{{ block.settings.tab_hero_slide.alt | escape }}">
          {% endif %}
          
          
           {% if block.settings.mob_hero_slide %}
          <img class="mob_hero_slide hero__image hero__image--{{ block.id }} lazyload{% unless forloop.first == true %} lazypreload{% endunless %}"
                src="{{ block.settings.mob_hero_slide | img_url: 'master' }}"
              alt="{{ block.settings.mob_hero_slide.alt | escape }}">
          {% endif %}
          
          
          
          <style>
            @media only screen and (min-width : 768px){
              #slideshow-{{ section.id }} .mob_hero_slide,
              #slideshow-{{ section.id }} .tab_hero_slide{ display: none; }
            }
            @media only screen and (max-width : 767px){
              #slideshow-{{ section.id }} .mob_hero_slide,
              #slideshow-{{ section.id }} .dsk_hero_slide{ display: none; }
            }
            @media only screen and (max-width : 550px){
              #slideshow-{{ section.id }} .dsk_hero_slide,
              #slideshow-{{ section.id }} .tab_hero_slide{ display: none; }
              #slideshow-{{ section.id }} .mob_hero_slide{ display: block; }
            }
          </style>
